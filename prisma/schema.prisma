generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Camera{
  id       String    @id @default(uuid()) @db.Uuid
  name     String
  location String
  incidents Incident[]
}
model Incident{
  id    String    @id @default(uuid()) @db.Uuid
  cameraId String @db.Uuid
  type     String
  tsStart  DateTime
  tsEnd    DateTime
  thumbnailUrl String
  resolved Boolean
  cammera  Camera  @relation(fields: [cameraId], references: [id]) 
}